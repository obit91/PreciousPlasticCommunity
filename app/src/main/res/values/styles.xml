<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.GreenActionBar" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="actionBarPopupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="actionBarWidgetTheme">@null</item>
        <item name="actionBarTheme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>

        <!-- Panel attributes -->
        <item name="listChoiceBackgroundIndicator">@drawable/abc_list_selector_holo_dark</item>

        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorPrimary">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.NoActionBar">

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="checkBoxStyleGreenLO" parent="Base.Theme.AppCompat">
        <!-- CHECKED COLOR -->
        <item name="colorAccent">@color/colorSeaGlass</item>
        <!-- UNCHECKED COLOR -->
        <item name="android:textColorSecondary">@color/colorStylishBlackBox</item>
    </style>

    <style name="checkBoxStyleBlueLO" parent="Base.Theme.AppCompat">
        <!-- CHECKED COLOR -->
        <item name="colorAccent">@color/colorGreyishBlue</item>
        <!-- UNCHECKED COLOR -->
        <item name="android:textColorSecondary">@color/colorStylishBlackBox</item>
    </style>
    <style name="GreenBGEditText" parent="Base.Theme.AppCompat">
        <!-- CHECKED COLOR -->
        <item name="colorAccent">@color/preciousPlasticBlue</item>
        <!-- UNCHECKED COLOR -->
        <item name="android:textColorSecondary">@color/colorStylishBlackBox</item>
    </style>

    <style name="StyledTilEditTextTheme">>
        <item name="android:textColor">@color/colorEditTextDarkGreen</item>
        <item name="android:textSize">17sp</item>
        <item name="colorAccent">@color/colorDarkGrey</item>
        <item name="colorControlNormal">@color/colorDarkGrey</item>
        <item name="colorControlActivated">@color/colorDarkGrey</item>
        <item name="colorControlHighlight">@color/colorDarkGrey</item>
        <item name="android:textColorPrimary">@color/colorDarkGrey</item>
    </style>

    <style name="StyledHintText">
        <item name="android:textColor">@color/colorEditTextDarkGreen</item>
        <item name="android:textSize">10dp</item>
    </style>

</resources>
