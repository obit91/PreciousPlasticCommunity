<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="checkBoxStyleGreenLO" parent="Base.Theme.AppCompat">
        <!-- CHECKED COLOR -->
        <item name="colorAccent">@color/colorSeaGlass</item>
        <!-- UNCHECKED COLOR -->
        <item name="android:textColorSecondary">@color/colorStylishBlackBox</item>
    </style>

    <style name="checkBoxStyleBlueLO" parent="Base.Theme.AppCompat">
        <!-- CHECKED COLOR -->
        <item name="colorAccent">@color/colorGreyishBlue</item>
        <!-- UNCHECKED COLOR -->
        <item name="android:textColorSecondary">@color/colorStylishBlackBox</item>
    </style>
    <style name="GreenBGEditText" parent="Base.Theme.AppCompat">
        <!-- CHECKED COLOR -->
        <item name="colorAccent">@color/colorGreyishBlue</item>
        <!-- UNCHECKED COLOR -->
        <item name="android:textColorSecondary">@color/colorStylishBlackBox</item>
    </style>

</resources>
