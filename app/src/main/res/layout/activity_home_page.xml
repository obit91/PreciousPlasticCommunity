<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.preciousplastic.activities.HomeActivity" >

    <TextView
        android:id="@+id/home_text_mail"
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:text="email" />

    <Button
        android:id="@+id/button_sign_out"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onSignOutClick"
        android:text="SIGN OUT" />

    <Button
        android:id="@+id/button_map"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onOpenMapClick"
        android:text="MAP" />

    <EditText
        android:id="@+id/text_points_value"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="POINTS TO UPDATE"
        android:inputType="numberSigned" />

    <EditText
        android:id="@+id/text_points_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="TYPE TO UPDATE"
        android:inputType="numberSigned" />

    <Button
        android:id="@+id/button_increment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onIncrementClick"
        android:text="INCREMENT POINTS" />

    <Button
        android:id="@+id/button_decrement"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onDecrementClick"
        android:text="DECREMENT POINTS" />

    <Button
        android:id="@+id/test_btn_drawer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onOpenDrawer"

        android:text="Open Drawer" />

</LinearLayout>